<h2>Registrar</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :required => true, :autofocus => true, :input_html => {:style => 'width: 200px'} %>
    <%= f.input :password, :required => true, :input_html => {:style => 'width: 200px'} %>
    <%= f.input :password_confirmation, :required => true, :input_html => {:style => 'width: 200px'} %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Registrar" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
