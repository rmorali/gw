<!DOCTYPE html>
<html>
<head>
  <title>X-Wing Strategy Game (XWSG)</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script type="text/javascript" src="javascripts/jquery.min.js"></script>
  <% if content_for? :for_head %>
    <script>
      function refreshParent(id) {
        window.opener.location.reload();
      }
    </script>
    <%= yield :for_head %>
  <% else %>
    <script>
      var blurred = false;
      window.onblur = function() { blurred = true; };
      window.onfocus = function() { blurred && (location.reload()); };
      function refreshParent(id) {
        window.opener.location.reload();
      } 
    </script>
  <% end %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css'>
  
  <script type='text/javascript' src='http://code.jquery.com/jquery-1.5.1.min.js'></script>
  <script type='text/javascript'>
    $(document).ready(function(){
    // Executa o evento CLICK em todos os links do menu
      $('#gifs b').live('click',function(){
        // Faz o carregamento da página de acordo com o COD da página, que vai pegar os valores da página page.php.
        $('#conteudo').load($(this).attr('href')).draggable();
        return false;
      });
    });
  </script>
  
  
</head>
<body onunload="location.reload()">
  <%= yield %>
</body>
</html>


